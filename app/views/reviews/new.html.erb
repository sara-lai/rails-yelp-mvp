<div class='bg-light mx-auto' style='max-width:600px;padding:20px;'>

  <h2>Review for: <%= @restaurant.name%></h2>

  <%= simple_form_for [@restaurant, @review], local: true do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.button :submit, "Create Review", class: "btn-primary" %>
  <% end %>

  <%= link_to "Cancel", restaurants_path %>

</div>
